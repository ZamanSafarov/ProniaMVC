@using Pronia.ViewModels
@{
    Layout = null;
}
@model AdminLoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login V1</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="~/admin/images/icons/favicon2.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/libs/bootstrap/dist/css/bootstrap.min.css">

	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/assets/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/libs/animate.css/animate.css">
	<!--===============================================================================================-->

	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/libs//select2/dist/css/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/admin/css/login.css">
	<!--===============================================================================================-->
</head>
<body>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="~/admin/images/img-01.png" alt="IMG">
				</div>
				<form method="post" asp-action="Login" class="login100-form">
					<span class="login100-form-title">
						Member Login
					</span>

					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
						<input class="input100" asp-for="UserName"  placeholder="UserName">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
						<span class="text-danger" asp-validation-for="UserName"></span>
					</div>

					<div class="wrap-input100 validate-input">
						<input class="input100" asp-for="Password" placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
						<span class="text-danger" asp-validation-for="Password"></span>
					</div>

					<div class="container-login100-form-btn">
						<button type="submit" class="login100-form-btn">
							Login
						</button>
					</div>

					<div class="text-center p-t-12">
						<span class="txt1">
							Forgot
						</span>
						<a class="txt2" href="#">
							Username / Password?
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>




	<!--===============================================================================================-->
	<script src="~/libs/jquery/jquery.min.js"></script>
	<!--===============================================================================================-->

	<script src="~/libs/bootstrap/dist/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/libs/select2/dist/js/select2.full.min.js"></script>
	<!--===============================================================================================-->


</body>
</html>