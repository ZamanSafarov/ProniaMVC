@using Core.Models
@model IEnumerable<Setting>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Key)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Value)</th>
            <th scope="col">Actions</th>
            <th>
                <a asp-action="create" asp-controller="Setting" type="button" class="btn btn-outline-success">Create</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@item.Id</th>
                <td>@item.Key</td>
                <td>@item.Value</td>
                <td>
                    <a type="button" asp-action="Update" asp-controller="Setting" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                    <a type="button" asp-action="Delete" asp-controller="Setting" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>