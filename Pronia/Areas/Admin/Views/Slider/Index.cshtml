
@model IPagedList<Slider>
@{
    int counter = 1;
}
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Offer</th>
            <th>ImageUrl</th>
            <th>RedirectUrl</th>
            <th>Actions</th>
            <th>
                <a asp-action="create" asp-controller="slider" type="button" class="btn btn-outline-success">Create</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@(counter++)</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Offer</td>
                <td><img width="40px" height="30px" src="~/admin/uploads/sliders/@item.ImageUrl" /></td>
                <td>@item.RedirectUrl</td>
                <td>
                    <a type="button" asp-action="Update" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                    <a type="button" asp-action="Delete" asp-controller="slider" asp-route-id="@item.Id" class="deleteBtn btn btn-outline-danger">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>

<div class="pagination-container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { pageIndex = page, pageSize = Model.PageSize}))
</div>