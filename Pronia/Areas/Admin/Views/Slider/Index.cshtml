@using Core.Models
@model IEnumerable<Slider>
@{
    int counter = 1;
}
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Offer)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ImageUrl)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.RedirectUrl)</th>
            <th scope="col">Actions</th>
            <th>
                <a asp-action="create" asp-controller="slider" type="button" class="btn btn-outline-success">Create</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th scope="row">@(counter++)</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Offer</td>
                <td><img width="40px" height="30px" src="~/admin/uploads/sliders/@item.ImageUrl" /></td>
                <td>@item.RedirectUrl</td>
                <td>
                    <a type="button" asp-action="Update" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                    <a type="button" asp-action="Delete" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>